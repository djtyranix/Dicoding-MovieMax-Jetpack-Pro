<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieMax" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue_500</item>
        <item name="colorPrimaryVariant">@color/lightblue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="cardview_bg">@color/bg_light</item>
        <item name="text_color_primary">@color/text_light</item>
        <item name="toolbar_gradient_color_left">@color/lightblue_500</item>
        <item name="toolbar_gradient_color_right">@color/lightblue_700</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="home_primary_color">?attr/colorPrimary</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_brand_logo</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarStyleHome" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/text_color_primary</item>
        <item name="android:textColorSecondary">@color/lightblue_500</item>
        <item name="actionMenuTextColor">@color/lightblue_500</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="TransparentText" parent="Theme.MovieMax">
        <item name="android:textColor">#00FFFFFF</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>
</resources>